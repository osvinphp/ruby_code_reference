<div class="page-content">
  <div class="page-header">
    <h1>
      <%=params[:action]=='new' ? 'New ' : 'Edit '%> Category
      <small>
        <i class="ace-icon fa fa-angle-double-right"></i>
      </small>
    </h1>
  </div><!-- /.page-header -->

  <div class="row">
    <div class="col-xs-12">
      <!-- PAGE CONTENT BEGINS -->
      <!-- <form role="form" class="form-horizontal"> -->
      <%=form_for [:admin, @event_category], html: {:class => 'form-horizontal'} do |f| %>
      <div class="form-actions">
        <div class="col-md-12 col-sm-12 category_form">
        <div class="form-group">
          <label class="col-sm-3 control-label no-padding-right"> Event Category Name </label>
          <div class="col-sm-9">
            <!-- <input type="text" class="col-xs-10 col-sm-5" placeholder="Username" id="form-field-1"> -->
            <%=f.text_field :event_name, class: "col-xs-10 col-sm-5" , required: true%>
          </div>
        </div>

        <div class="form-group">
          <label class="col-sm-3 control-label no-padding-right"> Color Code </label>
          <div class="col-sm-9">
            <!-- <input type="text" class="col-xs-10 col-sm-5" placeholder="Username" id="form-field-1"> -->
            <%=f.color_field :color_code, class: "col-xs-10 col-sm-5" %>
          </div>
        </div>

        <div class="form-group">
          <label class="col-sm-3 control-label no-padding-right"> Image </label>
          <div class="col-sm-9">
            <!-- <input type="text" class="col-xs-10 col-sm-5" placeholder="Username" id="form-field-1"> -->
            <%=f.file_field :image, class: "col-xs-10 col-sm-5" %>
          </div>
        </div>


        <div class="form-group">
          <label class="col-sm-3 control-label no-padding-right"></label>
          <div class="col-sm-9">
            <%if f.object.image.present?%>
              <img id="blah2" src="<%=f.object.image%>" alt="your image" width="100px" height="100px" style="background-color: <%=f.object.try(:color_code)%>"/>
            <%else%>
              <img id="blah2" style="background-color: black;" src="/assets/noimageavailable.png" alt="your image" width="100px" height="100px" />
            <%end%>
          </div>
        </div>

        </div>

        <div class="clearfix">
          <div class="col-md-offset-1 col-md-11 text-center">
            <button type="submit" class="btn btn-info CUstom">
              <i class="ace-icon fa fa-check bigger-110"></i>
              Save
            </button>
          </div>
        </div>
        </div>
      <!-- </form> -->
      <%end%>
      <!-- PAGE CONTENT ENDS -->
    </div><!-- /.col -->
  </div><!-- /.row -->
</div>


