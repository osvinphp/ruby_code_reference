<% @event_categories.each do |ec|%>
  <tr role="row" class="odd">
    <td><%= ec.event_name.try(:titleize) %></td>
    <td><%= ec.color_code %></td>
    <td>
      <div class="hidden-sm hidden-xs btn-group">
        <%= link_to "View", admin_event_category_path(ec) , class:"btn btn-xs btn-success"%>
        <%= link_to "Edit", edit_admin_event_category_path(ec) , class:"btn btn-xs btn-warning"%>

        <%= link_to "Delete", admin_event_category_path(ec), method: :delete , class:"btn btn-xs btn-danger", onclick:"return confirm('Are you sure you want to delete this event category?');" %>
      </div>
    </td>
  </tr>
<%end%>